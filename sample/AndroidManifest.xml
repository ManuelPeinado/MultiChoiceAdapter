<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manuelpeinado.multichoiceadapter.demo"
    android:versionCode="8"
    android:versionName="1.0.7" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".basicsample.BasicUsageActivity"
            android:label="@string/activity_title_basic_usage" />
        <activity
            android:name=".arraysample.ArrayAdapterActivity"
            android:label="@string/activity_title_array_adapter" />
        <activity
            android:name=".checkboxsample.CheckboxItemsActivity"
            android:label="@string/activity_title_checkbox_items" />
        <activity
            android:name=".dbsample.SimpleCursorAdapterActivity"
            android:label="@string/activity_title_simple_cursor_adapter" />
        <activity
            android:name=".gridsample.GridActivity"
            android:label="@string/activity_title_grid_adapter" />
        
        <provider
            android:name="com.manuelpeinado.multichoiceadapter.demo.dbsample.BuildingsContentProvider"
            android:authorities="com.manuelpeinado.multichoiceadapter.demo"
            android:exported="false" />
    </application>

</manifest>